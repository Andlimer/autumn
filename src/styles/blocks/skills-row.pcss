.skills-row__title {
  margin-bottom: 45px;
  font-size: 24px;
  font-weight: 700;
  line-height: 1;
  color: $sec-text-color;

  @include laptop {
    margin-bottom: 30px;
  }
}

.skills-row__list {
  display: flex;
  
  @include laptop {
    justify-content: center;
  }

  @include phones {
    flex-wrap: wrap;
  }
}

.skills-row__item {
  margin-right: 20px;

  &:last-child {
    margin-right: 0;
  }

  @include phones {
    margin-right: 0;
  }
}