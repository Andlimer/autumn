.slider-works {
  display: flex;
  justify-content: space-between;
}

.slider-works__display {
  position: relative;
  width: 65%;

  @include desktop {
    width: 58%;
  }
}

.slider-works__controller {
  position: absolute;
  right: -50px;
  bottom: 60px;
  display: flex;
  justify-content: flex-end;
  width: 100%;

  @include desktop {
    bottom: 30px;
  }
}

.slider-works__thumbs {
  width: 710px;
  height: 100px;
  overflow: hidden;
}

.slider-works__thumbs-list {
  display: flex;
  height: 100%;
  
  @include desktop {
    transform: translateX(177px);
  }
}

.slider-works__thumbs-item {

  &_active, 
  &:hover {
    outline: 3px solid $main-color;
    outline-offset: -3px;
  }
}

.slider-works__thumbs-link {
  display: block;
  width: 100%;
}

.slider-works__buttons 
.direction-btn {
  width: 50px;
  height: 50px;
  background-color: #353e4e;
  fill: $text-color;
  transition: .4s;

  &:hover {
    fill: $sec-text-color;
  }
}

