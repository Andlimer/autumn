.slider-works__info {
  position: relative;
  width: 25%;

  @include desktop {
    width: 32%;
  }
}

.slider-works__info-namber {
  position: absolute;
  // top: -38px;
  left: -220px;
  bottom: 115px;
  font-size: 400px;
  font-weight: 800;
  line-height: 1;
  color: #e6e6e6;
  z-index: -5;

  @include desktop {
    bottom: 85px;
  }
}

.slider-works__tags {
  display: flex;
  margin-bottom: 50px;
}

.slider-works__tag-item {
  margin-right: 10px;
}

.slider-works__info-title {
  width: 250px;
  margin-bottom: 40px;
  font-size: 30px;
  font-weight: 700;
  line-height: 48px;
  color: $dark-text-color;
}

.slider-works__info-desc {
  margin-bottom: 35px;
  font-weight: 400;
  line-height: 30px;
}