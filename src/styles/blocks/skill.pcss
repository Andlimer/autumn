.skill {
  position: relative;
  width: 134px;
  height: 134px;

  @include tablets {
    width: 112px;
    height: 112px;
  }
}

.skill__circle {
  fill: transparent;
}

.skill__circle_under {
  stroke: $text-color;
  stroke-width: 3px;
}

.skill__circle_over {
  stroke-width: 8px;
  stroke-dasharray: 251;
  stroke-dashoffset: 50%;
}

.skill__title {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-weight: 700;
}