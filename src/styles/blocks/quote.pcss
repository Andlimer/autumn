.quote {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 100px;
  width: 100%;
  height: 230px;
  position: relative;

  &:before {
    content: "";
    display: block;
    width: 75px;
    height: 63px;
    opacity: .05;
    background: svg-load('quote.svg', fill=$sec-text-color) center center / contain no-repeat;
    position: absolute;
    top: 0;
    left: 0;

    @include laptop {
      width: 30px;
      height: 26px;
    }
  }

  @include laptop {
    padding-left: 40px;
  }
}

.quote__text {
  line-height: 30px;
}
