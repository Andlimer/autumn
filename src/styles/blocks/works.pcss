.works {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 200px 0;

  @include desktop {
    padding: 150px 0;
  }

  @include tablets {
    padding: 120px 0;
  }

  @include phones {
    padding: 100px 0;
  }
}

.works__title {
  margin-bottom: 90px;
  color: $dark-text-color;

  @include desktop {
    margin-bottom: 60px;
  }

  @include phones {
    margin-bottom: 30px;
  }
}