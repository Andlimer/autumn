.social {
  display: flex;
  align-items: center;
}

.social__item {
  margin-right: 40px;

  &:last-child {
    margin-right: 0;
  }
}

.social__link {
  display: flex;
  align-items: center;

  &:hover {
    .social__icon {
      fill: $main-color;
    }
  }
}

.social__icon {
  width: 30px;
  height: 30px;
  fill: $text-color;
  transition: .4s;
}