.burger-btn {
  position: relative;
  display: none;
  align-items: center;
  width: 26px;
  height: 22px;

  @include laptop {
    display: flex;
  }
}

.burger-btn__elem {
  &, &:before, &:after {
    display: block;
    width: 100%;
    height: 4px;
    background-color: $sec-text-color;
  }

  &:after, &:before {
    content: '';
    position: absolute;
  }

  &:before {
    top: 0;
  }

  &:after {
    bottom: 0;
  }
}