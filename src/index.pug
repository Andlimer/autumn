include ./mixins.pug

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Портфолио
  body
    .wrapper
      .maincontent
        .section-welcome
          section.parallax
            .parallax__layer(data-speed="0.1")
              picture
                source(srcset=require("images/parallax/1_2560.jpg") media="(min-width: 1920px)").parallax__image
                img(srcset=require("images/parallax/1.jpg")).parallax__image
            .parallax__layer(data-speed="0.05")
              picture
                source(srcset=require("images/parallax/2_2560.png") media="(min-width: 1920px)").parallax__image
                img(srcset=require("images/parallax/2.png")).parallax__image
            .parallax__layer(data-speed="0.10")
              picture
                source(srcset=require("images/parallax/3_2560.png") media="(min-width: 1920px)").parallax__image
                img(srcset=require("images/parallax/3.png")).parallax__image
            .parallax__layer(data-speed="0.13")
              picture
                source(srcset=require("images/parallax/4_2560.png") media="(min-width: 1920px)").parallax__image
                img(srcset=require("images/parallax/4.png")).parallax__image

          section.section.hero
            .container.hero__container
              header.hero__header
                .hero__logo
                  .logo ЕГ

                .hero__menu
                  - var menu = ["Главная", "Обо мне", "Навыки", "Работы", "Отзывы", "Связаться"];
                  nav.menu
                    ul.menu__list
                      each item in menu
                        li.menu__item
                          a.menu__link #{item}
                .hero__social
                  - var icons = ["insta", "vk", "github"];
                  ul.social
                    each item in icons
                      li.social__item
                        a.social__link
                          +icon(item, "social__icon")

                a.burger-btn(href="#")
                  span.burger-btn__elem
                          
              h1.hero__title Евгений Гуртовой
                span.hero__desc Личный сайт <br> веб разработчика
              a.hero__buttons
                .hero__scroll Скролл
                +icon('scroll', 'hero__scroll-icon')

          section.about
            .container.about__container
              .about__left
                .user
                  .user__avatar
                    .avatar
                      +image("content/user.jpg", "avatar__image")
                  ul.user__desc
                    -
                      var items = [
                        ["Проживаю:", "Владивосток"],
                        ["Возраст:", "26 лет"],
                        ["Родился:", "14 сентября 1993"]
                      ];
                    each item in items
                      li.user__desc-item
                        .user__key #{item[0]}
                        .user__value #{item[1]}
              .about__right
                .about__welcome-text Привет, меня зовут
                h2.about__username Евгений Гуртовой
                .about__desc Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
                .about__ps Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!

        section.section-skills
          .container
            .section-skills__block
              h2.title.section-skills__title Чем я могу быть полезен вам
              .section-skills__ps Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
              .section-skills__content
                #skills-component
              
        section.works
          .container
            h2.title.works__title Мои работы
            .works__content
              #slider-component

        section.contacts
          .container
            .contacts__about
              #reviews-component

            .contacts__form
              h2.title.contacts__form-title Связаться со мной
              form.form
                .form__row
                  - 
                    var fields = [
                      ['user', 'Введите ваше имя', 'Евгений Гуртовой', 'name', 'text'],
                      ['envelope', 'Введите ваш email', 'Andlimer@gmail.com', 'to', 'email']
                    ]
                  each item in fields
                    label.form__block
                      p.form__field-title #{item[1]}
                      .form__field
                        +icon(`${item[0]}`, 'form__icon')
                        input(
                          type=item[4] 
                          name=item[3] 
                          placeholder=item[2]
                          required
                        ).form__input
                        .form__error
                .form__row.form__row_extra-margin
                  label.form__block
                      p.form__field-title Сообщение к письму
                      .form__field
                        +icon('message', 'form__icon')
                        textarea(
                          name="comment"
                          placeholder="Требуется ваша помощь в создании сайта. Интересуют сроки и цена вопроса"
                          required
                        ).form__input.form__input_textarea
                        .form__error
                .from__row
                  button.form__button(type="submit") Отправить
                    
      footer.footer
        .container.footer__container
          .footer__left
            .footer__copyright © 2019
            .footer__user
              h3.footer__user-title Евгений Гуртовой
              .footer__user-desc Личный сайт веб-разработчика

          .footer__right
            .footer__info
              .footer__info-menu
                nav.menu
                  ul.menu__list
                    each item in menu
                      li.menu__item
                        a.menu__link #{item}
              .footer__info-wrap
                .footer__info-contacts
                  .footer__info-ps Этот сайт я сделал в рамках обучения в Школе онлайн образования Loftschool
                  ul.social
                    each item in icons
                      li.social__item
                        a.social__link
                          +icon(item, "social__icon")
                .footer__info-text 
                  .footer__info-quote Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
                  .footer__info-author Martin Golding

    .burger-menu
      .burger-menu__content
        a.burger-menu__close(href="#")
          +icon('remove', 'burger-menu__icon')
        - var menu = ["Главная", "Обо мне", "Навыки", "Работы", "Отзывы", "Связаться"];
          nav.menu
            ul.menu__list
              each item in menu
                li.menu__item
                  a.menu__link #{item}

        - var icons = ["insta", "vk", "github"];
          ul.social
            each item in icons
              li.social__item
                a.social__link
                  +icon(item, "social__icon")

    include ./templates/entry.pug

      